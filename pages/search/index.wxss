page{
  background-color: #ecebeb;
  padding: 20rpx;
}
.search_row{
  height: 70rpx;
  display: flex;
}
.search_row input{
  background-color: #fff;
  flex: 9;
  height: 100%;
  padding-left: 30rpx;
}
.search_row button{
  width: 110rpx;
  height: 100%;
  flex:1;
  justify-content: center;
  align-content: center;
  font-size: 26rpx;
}

.search_item{
  margin-top: 5rpx;
  background-color: #fff;
  font-size: 30rpx;
  padding: 20rpx 10rpx;
  border-bottom: 1rpx solid #ccc;


  /* 多余字体隐藏 */
  overflow: hidden;
  /* 单行显示 */
  white-space: nowrap;
  /* 多出文字转变成省略号 */
  text-overflow: ellipsis;
}